{
  "extends": "@tsconfig/svelte/tsconfig.json",
	"compilerOptions": {
		"moduleResolution": "node",
		"module": "esnext",
		"lib": [
			"esnext",
			"DOM"
		],
		"target": "esnext",
    "useDefineForClassFields": true,
		"resolveJsonModule": true,
    "baseUrl": ".",
		"allowJs": true,
		"checkJs": true,
		"paths": {
			"$lib": [
				"src/lib"
			],
			"$lib/*": [
				"src/lib/*"
			]
		},
	},
	"include": [
    "src/**/*.d.ts",
		"src/**/*.js",
		"src/**/*.ts",
		"src/**/*.svelte"
	],
	"exclude": [
		"node_modules/**",
	]
}